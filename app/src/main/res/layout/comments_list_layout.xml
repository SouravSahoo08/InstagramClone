<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_profile_commentLayout"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/user_profile_commentLayout"
        android:orientation="vertical"
        android:padding="2dp">

        <TextView
            android:id="@+id/user_profile_name_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="username"
            android:textColor="@color/colourBlack"
            android:textSize="15sp"
            android:textStyle="bold" />

        <com.hendraanggrian.appcompat.widget.SocialTextView
            android:id="@+id/comment_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comments here"
            android:textColor="@color/colourBlack" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!--
                comment likes and reply
            <TextView
                android:id="@+id/comment_like_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14 likes"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/comment_Reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reply"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp"
                android:layout_marginStart="15dp"/>-->

        </LinearLayout>

    </LinearLayout>

    <!--
        comment like button
    <ImageView
        android:id="@+id/comment_like"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_like"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"/>-->

</RelativeLayout>